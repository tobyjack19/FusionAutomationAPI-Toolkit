{
  "compilerOptions": {
    "target": "ES2020",
  "module": "node16",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node16",
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["*.ts", "samples/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
